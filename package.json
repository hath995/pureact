  "dependencies": {
  },
  "devDependencies": {
    "browserify": "11.0.1",
    "watchify": "*",
    "babel": "5.6.x",
    "babelify": "6.1.x",
    "mkdirp": "0.5.x"
  },
  "scripts": {
    "test": "npm run browserify && node dist/bundle.js",
    "prebrowserify": "mkdirp dist",
    "browserify": "browserify src/main.js -t babelify --outfile dist/bundle.js",
    "watchify": "watchify src/main.js -t babelify --debug -o dist/bundle.js",
    "start": "npm install && npm run browserify && echo 'OPEN index.html IN YOUR BROWSER'"
  }
}
