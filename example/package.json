{
  "name": "example",
  "version": "0.1.0",
  "author": "Christian Landgren",
  "license": "MIT",
  "dependencies": {
  },
  "devDependencies": {
    "mkdirp": "^0.5.1",
    "babelify": "6.1.x",
    "browserify": "11.0.1",
    "watchify": "*"
  },
  "browserify": {
    "transform": ["babelify"]
  }, 
  "scripts": {
    "prebrowserify": "mkdirp dist",
    "browserify": "browserify src/main.js -t babelify --outfile dist/bundle.js",
    "watchify": "watchify src/main.js -t babelify --debug -o dist/bundle.js",
    "watch": "./node_modules/.bin/mocha -w tests/* --compilers js:babel/register",
    "start": "npm install && npm run browserify && echo 'OPEN index.html IN YOUR BROWSER'"
  }
}
