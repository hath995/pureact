{
  "name": "example",
  "version": "0.1.0",
  "author": "Christian Landgren",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "6.1.x",
    "browserify": "^13.0.1",
    "mkdirp": "^0.5.1",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "prebrowserify": "mkdirp dist",
    "browserify": "./node_modules/.bin/browserify src/main.js -t babelify --outfile dist/bundle.js",
    "watchify": "./node_modules/.bin/watchify src/main.js -t babelify --debug -o dist/bundle.js",
    "watch": "./node_modules/.bin/mocha -w tests/* --compilers js:babel/register",
    "start": "npm install && npm run browserify && echo 'OPEN index.html IN YOUR BROWSER'"
  }
}
